            android:name="at.mehlox.guildwars.GuildWarsEventListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.mehlox.guildwars.GuildWarsEventDetailActivity"
            android:label="@string/title_guildwarsevent_detail"
            android:parentActivityName="at.mehlox.guildwars.GuildWarsEventListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.mehlox.guildwars.GuildWarsEventListActivity" />
